<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shared\Todo.Web.Shared.csproj" />
  </ItemGroup>


	<Target Name="BuildCSS" BeforeTargets="Compile">
		<Exec Command="npx tailwindcss -i ./main.css -o ./wwwroot/css/tailwind.css" Condition=" '$(Configuration)' == 'Debug' " />
		<Exec Command="npx tailwindcss -i ./main.css -o ./wwwroot/css/tailwind.css --minify" Condition=" '$(Configuration)' == 'Release' " />
	</Target>

</Project>
